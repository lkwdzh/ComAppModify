<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        style="@style/ll_match_wrap_content_ver"
        android:background="@drawable/tianchukuang"
        android:gravity="center"
        android:padding="@dimen/px_35">

        <TextView
            android:id="@+id/tv_delete_order"
            android:text="修改购买数量"
            style="@style/grayTextView_333333_15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/px_20"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_cut_shopping_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shuzhi_cut" />

            <EditText

                android:id="@+id/et_count_shopping_cart_input"
                android:layout_width="@dimen/px_80"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:focusable="true"
                android:inputType="numberDecimal"
                android:digits="0123456789."
                android:textColor="@color/textcolor_333333"
                android:background="@drawable/shuzhimiddle"
                android:gravity="center"
                android:text="0" />

            <ImageView
                android:id="@+id/iv_add_shopping_cart_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shuzhi_add" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        style="@style/ll_match_wrap_content_hor"
        android:background="@drawable/tianchukuang2"
        android:gravity="center"
        android:padding="@dimen/px_20">

        <Button
            android:id="@+id/btn_cancel_delete"
            android:layout_width="@dimen/px_150"
            android:layout_height="@dimen/px_55"
            android:layout_marginRight="@dimen/px_40"
            android:background="@drawable/zhifuquxiao"
            android:text="取消"
            android:textColor="@color/textcolor_999999"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btn_confirm_delete"
            android:layout_width="@dimen/px_150"
            android:layout_height="@dimen/px_55"
            android:layout_marginLeft="@dimen/px_10"
            android:background="@drawable/queren"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>