<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ll_match_content_ver"
    android:background="@color/gray_eeeeee">


    <include layout="@layout/activity_base_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            style="@style/ll_match_content_ver"
            android:background="@color/gray_eeeeee">


            <View style="@style/line_1" />

            <LinearLayout style="@style/basic_infor_ll_weight">

                <TextView
                    style="@style/company_basic_infor_TextView_333333_13"
                    android:text="@string/basic_information_name" />

                <TextView
                    android:id="@+id/et_username_basic_info"
                    style="@style/company_basic_infor_edittext_weight_13" />
            </LinearLayout>

            <View style="@style/line_1" />

            <LinearLayout style="@style/basic_infor_ll_weight">

                <TextView
                    style="@style/company_basic_infor_TextView_333333_13"
                    android:text="席位号" />

                <TextView
                    android:id="@+id/tv_seat_basic_info"
                    style="@style/company_basic_infor_edittext_weight_13" />
            </LinearLayout>

            <View style="@style/line_1" />


            <LinearLayout style="@style/basic_infor_ll_weight">

                <TextView
                    android:id="@+id/tv_trueName"
                    style="@style/company_basic_infor_TextView_333333_13"
                    android:text="@string/basic_information_true_name" />

                <EditText
                    android:id="@+id/et_truename_basic_info"
                    style="@style/company_basic_infor_edittext_weight_13"
                    android:hint="请输入真实姓名(必填)" />
            </LinearLayout>

            <View style="@style/line_1" />

            <TextView
                style="@style/remind_TextView_666666_11_center"
                android:text="请填写真实姓名一经填写不能修改,此名字必须与银行卡开户名字相同！(必填)" />

            <View style="@style/line_1" />

            <LinearLayout style="@style/basic_infor_ll_weight">

                <TextView
                    style="@style/company_basic_infor_TextView_333333_13"
                    android:text="@string/basic_information_id_card" />

                <EditText
                    android:id="@+id/et_num_basic_info"
                    style="@style/company_basic_infor_edittext_weight_13"
                    android:digits="1234567890xX"
                    android:maxLength="18"
                    android:hint="请输入身份证号(必填)" />
            </LinearLayout>

            <View style="@style/line_1" />

            <TextView
                style="@style/remind_TextView_666666_11_center"
                android:text="请填写身份证号一经填写不能修改(必填)" />

            <View style="@style/line_1" />

            <LinearLayout style="@style/basic_infor_ll_weight">

                <TextView
                    style="@style/company_basic_infor_TextView_333333_13"
                    android:text="@string/basic_information_email" />

                <EditText
                    android:id="@+id/et_email_basic_info"
                    style="@style/company_basic_infor_edittext_weight_13"
                    android:inputType="textEmailAddress"
                    android:hint="请输入邮箱(必填)" />
            </LinearLayout>

            <View style="@style/line_1" />

            <LinearLayout
                android:visibility="gone"
                style="@style/basic_infor_ll_weight">

                <TextView
                    style="@style/company_basic_infor_TextView_333333_13"
                    android:text="QQ" />

                <EditText
                    android:id="@+id/et_qq_basic_info"
                    style="@style/company_basic_infor_edittext_weight_13"
                    android:inputType="number"
                    android:hint="请输入QQ号" />
            </LinearLayout>


            <View
                style="@style/line_1"
                android:layout_marginTop="@dimen/px_14" />


            <LinearLayout
                style="@style/basic_infor_ll_weight"
                android:visibility="gone">

                <TextView
                    style="@style/company_basic_infor_TextView_333333_13"
                    android:text="@string/basic_information_fix_num" />

                <EditText
                    android:id="@+id/et_guding_basic_info"
                    style="@style/company_basic_infor_edittext_weight_13"
                    android:digits="1234567890-"
                    android:hint="请输入固定电话" />
            </LinearLayout>

            <View style="@style/line_1"
                android:visibility="gone"/>


            <LinearLayout style="@style/basic_infor_ll_weight">

                <TextView
                    style="@style/company_basic_infor_TextView_333333_13"
                    android:text="@string/basic_information_phone_num" />

                <EditText
                    android:id="@+id/et_phone_basic_info"
                    style="@style/company_basic_infor_edittext_weight_13"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:hint="请输入手机号(必填)" />
            </LinearLayout>


            <View style="@style/line_1" />

            <TextView
                style="@style/remind_TextView_666666_11_center"
                android:text="请填写您的常用手机，以方便与您联系，一个手机号可以注册多个用户(必填)" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>
