<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/rl_match_content"
    android:background="@color/white">

    <include
        android:id="@+id/layout_title"
        layout="@layout/activity_base_title_bar" />

    <ScrollView
        style="@style/ll_match_content_ver"
        android:layout_below="@+id/layout_title"
        android:layout_above="@+id/ll_bottom_goods_detail"
        android:background="@color/gray_eeeeee">

        <LinearLayout
            style="@style/ll_match_content_ver"
            android:background="@color/gray_eeeeee">

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_goods_detail"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/startup01"></android.support.v4.view.ViewPager>

            <TextView
                android:id="@+id/tv_detail_goods_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/px_14"
                android:text="挖掘机一台"
                android:textSize="15sp" />

            <RelativeLayout
                style="@style/ll_match_wrap_content_hor"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/px_14"
                android:layout_marginLeft="@dimen/px_14"
                android:layout_marginRight="@dimen/px_14">

                <TextView
                    android:id="@+id/tv_left"
                    style="@style/redTextView_f47070"
                    android:text="￥"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_price_goods_detail"
                    style="@style/redTextView_f47070"
                    android:layout_toRightOf="@+id/tv_left"
                    android:text="1999.00"
                    android:textSize="15sp" />

                <TextView
                    style="@style/redTextView_c91014"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/shanchu"
                    android:gravity="center"
                    android:text="立即购买"
                    android:textSize="13sp" />
            </RelativeLayout>

            <View style="@style/line_1" />

            <LinearLayout
                style="@style/ll_match_content_ver"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="@dimen/px_14">

                <LinearLayout
                    style="@style/ll_match_wrap_content_hor"

                    android:layout_gravity="center_vertical">

                    <TextView
                        style="@style/grayTextView_999999_13"
                        android:text="@string/goods_detail_cangdanhao" />

                    <TextView
                        android:id="@+id/tv_cangdanhao_goods_detail"
                        style="@style/grayTextView_333333_13"
                        android:text="1234654684684563" />
                </LinearLayout>

                <LinearLayout
                    style="@style/ll_match_wrap_content_hor"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/px_14">

                    <TextView
                        style="@style/grayTextView_999999_13"
                        android:text="@string/goods_detail_huowuzhonglei" />

                    <TextView
                        android:id="@+id/tv_huowuzhonglei_goods_detail"
                        style="@style/grayTextView_333333_13"
                        android:text="粮食-玉米" />
                </LinearLayout>

                <LinearLayout
                    style="@style/ll_match_wrap_content_hor"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/px_14">

                    <TextView
                        style="@style/grayTextView_999999_13"
                        android:text="可用重量：" />

                    <TextView
                        android:id="@+id/tv_weight_goods_detail"
                        style="@style/grayTextView_333333_13"
                        android:text="30吨" />
                </LinearLayout>

                <LinearLayout
                    style="@style/ll_match_wrap_content_hor"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/px_14">

                    <TextView
                        style="@style/grayTextView_999999_13"
                        android:text="@string/goods_detail_in_time" />

                    <TextView
                        android:id="@+id/tv_in_time_goods_detail"
                        style="@style/grayTextView_333333_13"
                        android:text="2015-12-02" />
                </LinearLayout>

                <LinearLayout
                    style="@style/ll_match_wrap_content_hor"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/px_14">

                    <TextView
                        style="@style/grayTextView_999999_13"
                        android:text="@string/goods_detail_producing_area" />

                    <TextView
                        android:id="@+id/tv_producing_area_goods_detail"
                        style="@style/grayTextView_333333_13"
                        android:text="山东" />
                </LinearLayout>

                <LinearLayout
                    style="@style/ll_match_wrap_content_hor"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/px_14">

                    <TextView
                        style="@style/grayTextView_999999_13"
                        android:text="@string/goods_detail_xuetou" />

                    <TextView
                        android:id="@+id/tv_xuetou_goods_detail"
                        style="@style/grayTextView_333333_13"
                        android:text="mark" />
                </LinearLayout>

                <LinearLayout
                    style="@style/ll_match_wrap_content_hor"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/px_14">

                    <TextView
                        style="@style/grayTextView_999999_13"
                        android:text="@string/goods_detail_userful_life" />

                    <TextView
                        android:id="@+id/tv_userful_life_goods_detail"
                        style="@style/grayTextView_333333_13"
                        android:text="2015-12-22" />
                </LinearLayout>

                <LinearLayout
                    style="@style/ll_match_wrap_content_hor"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/px_14">

                    <TextView
                        style="@style/grayTextView_999999_13"
                        android:text="@string/goods_detail_name" />

                    <TextView
                        android:id="@+id/tv_name_goods_detail"
                        style="@style/grayTextView_333333_13"
                        android:text="王大锤" />
                </LinearLayout>

                <LinearLayout
                    style="@style/ll_match_wrap_content_hor"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/px_14">

                    <TextView
                        style="@style/grayTextView_999999_13"
                        android:text="@string/goods_detail_phone" />

                    <TextView
                        android:id="@+id/tv_phone_goods_detail"
                        style="@style/grayTextView_333333_13"
                        android:text="1223456987741" />
                </LinearLayout>

                <LinearLayout
                    style="@style/ll_match_wrap_content_hor"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/px_14">

                    <TextView
                        style="@style/grayTextView_999999_13"
                        android:text="@string/goods_detail_email" />

                    <TextView
                        android:id="@+id/tv_emailgoods_detail"
                        style="@style/grayTextView_333333_13"
                        android:text="12344@126.com" />
                </LinearLayout>

                <LinearLayout
                    style="@style/ll_match_wrap_content_hor"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/px_14">

                    <TextView
                        style="@style/grayTextView_999999_13"
                        android:text="@string/goods_detail_address" />

                    <TextView
                        android:id="@+id/tv_address_goods_detail"
                        style="@style/grayTextView_333333_13"
                        android:text="北京市大钟寺" />
                </LinearLayout>

                <LinearLayout
                    style="@style/ll_match_wrap_content_hor"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/px_14"
                    android:layout_marginTop="@dimen/px_14">

                    <TextView
                        style="@style/grayTextView_999999_13"
                        android:text="@string/goods_detail_goods_detail" />

                    <TextView
                        android:id="@+id/tv_goods_detail_goods_detail"
                        style="@style/grayTextView_333333_13"
                        android:text="很好很好" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_bottom_goods_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingTop="@dimen/px_10"
            android:paddingBottom="@dimen/px_10"
            android:background="@color/black"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/ll_kefu_goods_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/kefu" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="客服"
                    android:textColor="@color/white"
                    android:textSize="12sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_attention_goods_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/guanzhu" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="关注"
                    android:textColor="@color/white"
                    android:textSize="12sp" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_shopping_cart_goods_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="@dimen/px_40"
                    android:layout_height="@dimen/px_40">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/main_bottom_tab_cart_focus" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/red_round"
                        android:gravity="center"
                        android:paddingLeft="@dimen/px_5"
                        android:paddingRight="@dimen/px_5"
                        android:text="2"
                        android:textColor="@color/white"
                        android:textSize="8sp" />
                </RelativeLayout>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="购物车"
                    android:textColor="@color/white"
                    android:textSize="12sp" />


            </LinearLayout>



        </LinearLayout>

        <TextView
            android:id="@+id/tv_add_to_car_goods_detail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/red"
            android:gravity="center"
            android:text="加入购物车"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>
</RelativeLayout>
