<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_eeeeee"
    android:orientation="vertical">

    <include
        android:id="@+id/top"
        layout="@layout/activity_base_title_bar" />

    <ImageView
        android:id="@+id/iv_modify_pwd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top"
        android:scaleType="fitXY"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_modify"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top"
        android:background="@color/gray_eeeeee"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            style="@style/line_1"
            android:layout_marginTop="@dimen/px_14" />

        <LinearLayout style="@style/guadan_ll_weight">

            <TextView
                style="@style/guadan_TextView_333333"
                android:text="原密码" />

            <EditText
                android:id="@+id/et_name_modify_password"
                style="@style/guadan_edittext_weight"
                android:hint="请输入原密码" />
        </LinearLayout>

        <View style="@style/line_1" />

        <LinearLayout style="@style/guadan_ll_weight">

            <TextView
                style="@style/guadan_TextView_333333"
                android:text="新密码" />

            <EditText
                android:id="@+id/et_phone_modify_password"
                style="@style/guadan_edittext_weight"
                android:hint="请输入新密码" />
        </LinearLayout>

        <View style="@style/line_1" />

        <!--<LinearLayout style="@style/guadan_ll_weight">-->

        <!--<TextView-->
        <!--style="@style/guadan_TextView_333333"-->
        <!--android:text="确认密码" />-->

        <!--<EditText-->
        <!--android:id="@+id/et_email_modify_password"-->
        <!--style="@style/guadan_edittext_weight"-->
        <!--android:hint="请再次输入密码" />-->
        <!--</LinearLayout>-->

        <!--<View style="@style/line_1" />-->

        <Button
            android:id="@+id/btn_tijiao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_50"
            android:layout_marginRight="@dimen/px_50"
            android:layout_marginTop="@dimen/px_20"
            android:background="@drawable/anjian"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </LinearLayout>

</RelativeLayout>
