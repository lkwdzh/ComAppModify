        android:layout_marginTop="@dimen/px_14" />

    <RelativeLayout
        style="@style/rl_match_wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/px_14"
        android:paddingRight="@dimen/px_14"
        android:paddingTop="@dimen/px_20"
        android:paddingBottom="@dimen/px_20">

        <TextView
            style="@style/grayTextView_333333_15"
            android:layout_centerVertical="true"
            android:text="版本更新" />

        <TextView
            style="@style/grayTextView_999999_15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="V1.0.0" />
    </RelativeLayout>

    <View style="@style/line_1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/anjian"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/px_50"
        android:text="退出登录"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:gravity="center" />
