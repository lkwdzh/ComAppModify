    <include layout="@layout/activity_base_title_bar" />

    <View style="@style/line_1" />

    <TextView
        style="@style/basic_infor_TextView_333333_set"
        android:drawableRight="@drawable/next"
        android:text="仓库现货" />

    <View style="@style/line_1" />

    <TextView
        style="@style/basic_infor_TextView_333333_set"
        android:layout_centerVertical="true"
        android:drawableRight="@drawable/next"
        android:text="远期合同" />

    <View style="@style/line_1" />

    <TextView
        style="@style/basic_infor_TextView_333333_set"
        android:drawableRight="@drawable/next"
        android:text="买卖规则" />

    <View style="@style/line_1" />

    <TextView
        style="@style/basic_infor_TextView_333333_set"
