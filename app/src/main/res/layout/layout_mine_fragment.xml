<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout style="@style/ll_match_wrap_content_ver">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_54"
                android:background="@color/red"
                android:gravity="center"
                android:text="我的"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/ll_background_mine_fragment"
                style="@style/ll_match_wrap_content_ver"
                android:background="@drawable/beijing"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_icon_mine_fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/px_20"
                    android:src="@drawable/icon_user" />


                <TextView
                    style="@style/whiteTextView"
                    android:layout_marginTop="@dimen/px_10"
                    android:text="昵称" />

            </LinearLayout>

            <LinearLayout
                style="@style/ll_match_wrap_content_ver"
                android:background="@color/white">

                <RelativeLayout
                    style="@style/rl_match_wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/px_10"
                    android:paddingLeft="@dimen/px_10"
                    android:paddingTop="@dimen/px_10">

                    <TextView
                        style="@style/grayTextView_333333"
                        android:drawableLeft="@drawable/dingdan"
                        android:gravity="center_vertical"
                        android:text="我的订单"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_all_order_mine_fragment"
                        style="@style/grayTextView_999999"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawableRight="@drawable/next"
                        android:gravity="center_vertical"
                        android:text="查看全部订单"
                        android:textSize="15sp" />
                </RelativeLayout>

                <View style="@style/line_1" />

                <LinearLayout
                    style="@style/ll_match_wrap_content_hor"
                    android:background="@color/white"
                    android:paddingBottom="@dimen/px_10"
                    android:paddingTop="@dimen/px_10"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/rl_daifukuan_mine_fragment"
                            android:layout_width="@dimen/px_40"
                            android:layout_height="@dimen/px_40">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@drawable/daifukuan" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/red_round"
                                android:gravity="center"
                                android:paddingLeft="@dimen/px_5"
                                android:paddingRight="@dimen/px_5"
                                android:text="2"
                                android:textColor="@color/white"
                                android:textSize="8sp" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tv_daifukuan_mine_fragment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="代付款"
                            android:textSize="12sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/rl_daishouhuo_mine_fragment"
                            android:layout_width="@dimen/px_40"
                            android:layout_height="@dimen/px_40">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@drawable/shouhuo" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/red_round"
                                android:gravity="center"
                                android:paddingLeft="@dimen/px_5"
                                android:paddingRight="@dimen/px_5"
                                android:text="2"
                                android:textColor="@color/white"
                                android:textSize="8sp" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tv_daishouhuo_mine_fragment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="代收货"
                            android:textSize="12sp" />


                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <View style="@style/line_1" />

            <LinearLayout
                style="@style/ll_match_wrap_content_ver"
                android:layout_marginTop="@dimen/px_15"
                android:background="@color/white">

                <View style="@style/line_1" />

                <RelativeLayout
                    style="@style/rl_match_wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/px_10"
                    android:paddingLeft="@dimen/px_10"
                    android:paddingTop="@dimen/px_10">

                    <TextView
                        style="@style/grayTextView_333333"
                        android:drawableLeft="@drawable/guadan"
                        android:gravity="center_vertical"
                        android:text="我的挂单"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_gua_order_mine_fragment"
                        style="@style/grayTextView_999999"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawableRight="@drawable/next"
                        android:gravity="center_vertical"
                        android:text="查看全部挂单"
                        android:textSize="15sp" />
                </RelativeLayout>

                <View style="@style/line_1" />

                <LinearLayout
                    style="@style/ll_match_wrap_content_hor"
                    android:background="@color/white"
                    android:paddingBottom="@dimen/px_10"
                    android:paddingTop="@dimen/px_10"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/rl_yaoguadan_mine_fragment"
                            android:layout_width="@dimen/px_40"
                            android:layout_height="@dimen/px_40">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@drawable/daiguadan" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/red_round"
                                android:gravity="center"
                                android:paddingLeft="@dimen/px_5"
                                android:paddingRight="@dimen/px_5"
                                android:text="2"
                                android:textColor="@color/white"
                                android:textSize="8sp" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tv_daiguadan_mine_fragment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="代付款"
                            android:textSize="12sp" />


                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <View style="@style/line_1" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>