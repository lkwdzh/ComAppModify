<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/px_200"
    android:layout_gravity="center"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_65"
        android:gravity="center"
        android:text="尚未绑定银行卡，不能支付，去绑定？"
        android:background="@drawable/tianchukuang"
        android:textColor="@color/textcolor_999999"
        android:textSize="15sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/bottom"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_cancel_pay_popup"
            android:layout_width="@dimen/px_100"
            android:layout_height="@dimen/px_40"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_50"
            android:background="@drawable/quxiao"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/textcolor_333333"
            android:textSize="11sp" />

        <Button
            android:id="@+id/btn_confirm_pay_popup"
            android:layout_width="@dimen/px_100"
            android:layout_height="@dimen/px_40"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px_50"
            android:background="@drawable/red_back"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="11sp" />
    </RelativeLayout>
</LinearLayout>