<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_65"
        android:gravity="center"
        android:text="银行卡支付"
        android:background="@drawable/top"
        android:textColor="@color/textcolor_999999"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_50"
        android:background="@drawable/middle"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_money_pay_popup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px_20"
            android:gravity="center_vertical"
            android:text="5999.99"
            android:textColor="@color/textcolor_333333"
            android:textSize="11sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="元"
            android:textColor="@color/textcolor_333333"
            android:textSize="11sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_card_pay_popup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_50"
        android:background="@drawable/middle"
        android:paddingLeft="@dimen/px_20"
        android:drawableRight="@drawable/next"
        android:gravity="center_vertical"
        android:text="农业银行储蓄卡（尾号7373）付款"
        android:textColor="@color/textcolor_333333"
        android:textSize="11sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/middle"
        android:layout_height="@dimen/px_50">

        <EditText
            android:id="@+id/et_input_pay_popup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_20"
            android:layout_toLeftOf="@+id/tv_yanzheng_pay_popup"
            android:background="@null"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_yanzheng_pay_popup"
            android:layout_width="@dimen/px_55"
            android:layout_height="@dimen/px_30"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/px_14"
            android:layout_centerVertical="true"
            android:background="@drawable/shanchu"
            android:gravity="center"
            android:text="验证码"
            android:textColor="@color/red_c91014"
            android:textSize="11sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/bottom"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_cancel_pay_popup"
            android:layout_width="@dimen/px_100"
            android:layout_height="@dimen/px_40"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_50"
            android:background="@drawable/quxiao"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/textcolor_333333"
            android:textSize="11sp" />

        <Button
            android:id="@+id/btn_confirm_pay_popup"
            android:layout_width="@dimen/px_100"
            android:layout_height="@dimen/px_40"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px_50"
            android:background="@drawable/fukuanqueren"
            android:text="付款"
            android:textColor="@color/white"
            android:textSize="11sp" />
    </RelativeLayout>
</LinearLayout>