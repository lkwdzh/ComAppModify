<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/px_60"
            android:layout_marginTop="@dimen/px_20"
            android:layout_toLeftOf="@+id/view_1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                style="@style/grayTextView_333333_13"
                android:layout_marginRight="@dimen/px_20"
                android:text="王大锤" />

            <TextView
                android:id="@+id/tv_phone"
                style="@style/grayTextView_333333_13"
                android:text="12365478998" />
        </LinearLayout>

        <RelativeLayout
            android:layout_below="@+id/ll_top"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/px_20"
            android:paddingRight="@dimen/px_20"
            android:paddingTop="@dimen/px_14"
            android:layout_toLeftOf="@+id/view_1"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_isCheck"
                android:src="@drawable/yixuan"
                android:layout_width="wrap_content"
                android:layout_marginRight="@dimen/px_14"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_isMoren"
                android:layout_toRightOf="@id/iv_isCheck"
                style="@style/redTextView_c91014_13"
                android:text="默认" />

            <TextView
                android:id="@+id/tv_address"
                style="@style/grayTextView_333333_13"
                android:layout_toRightOf="@id/tv_isMoren"
                android:layout_marginLeft="@dimen/px_14"
                android:text="1232312321312" />


        </RelativeLayout>
        <View
            android:id="@+id/view_1"
            android:layout_width="0.5dp"
            android:layout_height="@dimen/px_70"
            android:background="@color/gray_line"
            android:layout_toLeftOf="@+id/iv_edit"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/px_14" />

        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="@dimen/px_70"
            android:src="@drawable/editd"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/px_20"
            android:paddingLeft="@dimen/px_14"
            android:layout_alignParentRight="true"
            android:scaleType="centerInside"
            android:layout_height="match_parent" />
    </RelativeLayout>


    <View style="@style/line_1"
        android:layout_marginTop="@dimen/px_20"/>
</LinearLayout>