<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/px_20"
        android:paddingRight="@dimen/px_20"
        android:paddingBottom="@dimen/px_15"
        android:paddingTop="@dimen/px_15"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_isCheck"
            android:src="@drawable/yixuan"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/px_14"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_isMoren"
            android:layout_toRightOf="@id/iv_isCheck"
            android:layout_centerVertical="true"
            style="@style/redTextView_c91014_13"
            android:text="默认" />

        <TextView
            android:id="@+id/tv_address"
            style="@style/grayTextView_333333_13"
            android:layout_toRightOf="@id/tv_isMoren"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/view1"
            android:layout_marginLeft="@dimen/px_14"
            android:text="1232312321312" />
        <View
            android:id="@+id/view_1"
          android:layout_width="0.5dp"
            android:layout_height="@dimen/px_40"
            android:background="@color/gray_line"
            android:layout_toLeftOf="@+id/iv_edit"
            android:layout_marginRight="@dimen/px_14"
            android:layout_marginTop="@dimen/px_14"
            android:layout_marginBottom="@dimen/px_14"
            />
        <ImageView
            android:id="@+id/iv_edit"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:src="@drawable/editd"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
       style="@style/line_1"
        />
</LinearLayout>