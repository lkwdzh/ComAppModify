<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_eeeeee"
    android:orientation="vertical">

    <include layout="@layout/activity_base_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/gray_eeeeee">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_300"
                android:visibility="gone"
                android:background="@drawable/beijing">

                <ImageView
                    android:id="@+id/iv_icon_mine_fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/px_18"
                    android:src="@drawable/icon_user" />


                <TextView
                    android:id="@+id/tv_name_person_info"
                    style="@style/whiteTextView"
                    android:layout_below="@+id/iv_icon_mine_fragment"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/px_8"
                    android:text="昵称" />

            </RelativeLayout>

            <View
                style="@style/line_1"
                android:layout_marginTop="@dimen/px_14" />

            <TextView
                android:id="@+id/tv_basic_infor_peson_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"

                android:drawableLeft="@drawable/jibenxinxi"
                android:drawableRight="@drawable/next"
                android:gravity="center_vertical"
                android:padding="@dimen/px_14"
                android:text="@string/person_information_jibenxinxi"
                android:textColor="@color/textcolor_333333"
                android:textSize="15sp" />

            <View style="@style/line_1" />

            <View
                style="@style/line_1"
                android:layout_marginTop="@dimen/px_14" />

            <TextView
                android:id="@+id/tv_bang_card_person_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawableLeft="@drawable/bangding"
                android:drawableRight="@drawable/next"
                android:gravity="center_vertical"
                android:padding="@dimen/px_14"
                android:text="@string/person_information_card"
                android:textColor="@color/textcolor_333333"
                android:textSize="15sp" />

            <View style="@style/line_1" />

            <View
                style="@style/line_1"
                android:layout_marginTop="@dimen/px_14" />

            <TextView
                android:id="@+id/tv_linkman_person_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawableLeft="@drawable/zhangyonglianxiren"
                android:drawableRight="@drawable/next"
                android:gravity="center_vertical"
                android:padding="@dimen/px_14"
                android:text="@string/person_info_linkman"
                android:textColor="@color/textcolor_333333"
                android:textSize="15sp" />

            <View style="@style/line_1" />

            <View
                style="@style/line_1"
                android:layout_marginTop="@dimen/px_14" />

            <TextView
                android:id="@+id/tv_driver_person_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawableLeft="@drawable/changyongsiji"
                android:drawableRight="@drawable/next"
                android:gravity="center_vertical"
                android:padding="@dimen/px_14"
                android:text="@string/person_info_driver"
                android:textColor="@color/textcolor_333333"
                android:textSize="15sp" />

            <View style="@style/line_1" />

            <View
                style="@style/line_1"
                android:layout_marginTop="@dimen/px_14" />

            <TextView
                android:id="@+id/tv_friend_person_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawableLeft="@drawable/shoucanghaoyou"
                android:drawableRight="@drawable/next"
                android:gravity="center_vertical"
                android:padding="@dimen/px_14"
                android:text="@string/person_info_friend"
                android:textColor="@color/textcolor_333333"
                android:textSize="15sp" />

            <View style="@style/line_1" />

            <View
                style="@style/line_1"
                android:visibility="visible"
                android:layout_marginTop="@dimen/px_14" />

            <TextView
                android:id="@+id/tv_address_person_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawableLeft="@drawable/address"
                android:drawableRight="@drawable/next"
                android:gravity="center_vertical"
                android:padding="@dimen/px_14"
                android:text="发票地址管理"
                android:visibility="visible"
                android:textColor="@color/textcolor_333333"
                android:textSize="15sp" />
            <View style="@style/line_1" />

            <View
                style="@style/line_1"
                android:visibility="visible"
                android:layout_marginTop="@dimen/px_14" />

            <TextView
                android:id="@+id/tv_bill_person_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawableLeft="@drawable/address"
                android:drawableRight="@drawable/next"
                android:gravity="center_vertical"
                android:padding="@dimen/px_14"
                android:text="发票信息"
                android:visibility="visible"
                android:textColor="@color/textcolor_333333"
                android:textSize="15sp" />

            <View
                style="@style/line_1"
                android:layout_marginBottom="@dimen/px_20" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
