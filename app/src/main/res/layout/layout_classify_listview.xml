<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_classify_listview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/px_2">

    <ImageView
        android:id="@+id/iv_classify_lisview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_classify_lisview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingTop="@dimen/px_10"
        android:paddingBottom="@dimen/px_10"
        android:gravity="center_horizontal"
        android:layout_toRightOf="@+id/iv_classify_lisview"
        android:textColor="@color/textcolor_333333" />

    <View
        style="@style/line_2"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/px_5" />
    <View
        android:layout_alignParentBottom="true"
       style="@style/line_1"/>
</RelativeLayout>