<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/px_14"
        android:paddingLeft="@dimen/px_20"
        android:paddingRight="@dimen/px_20"
        android:paddingTop="@dimen/px_14">

        <ImageView
            android:id="@+id/iv_lv_lv"
            style="@style/imageview_px134"
            android:layout_marginRight="@dimen/px_14"
            android:scaleType="centerInside"
            android:src="@drawable/tongxun" />

        <LinearLayout style="@style/ll_match_wrap_content_ver">

            <RelativeLayout style="@style/rl_match_wrap_content">

                <TextView
                    android:id="@+id/tv_name_lv_lv"
                    style="@style/grayTextView_333333_13"
                    android:layout_marginRight="@dimen/px_14"
                    android:layout_toLeftOf="@+id/ll_1"
                    android:layout_alignParentLeft="true"
                    android:text="小米小米小米小米小米小米小米小米小米小米小米小米小米小米" />

                <LinearLayout
                    android:id="@+id/ll_1"
                    style="@style/ll_wrap_content_hor"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/px_5">

                    <TextView
                        style="@style/grayTextView_333333"
                        android:text="￥"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_price_lv_lv"
                        style="@style/grayTextView_333333"
                        android:text="1999.0"
                        android:textSize="10sp" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                style="@style/rl_match_wrap_content"
                android:layout_marginTop="@dimen/px_20">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/grayTextView_999999"
                        android:text="重量："
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_weight_lv_lv"
                        style="@style/grayTextView_999999"
                        android:text="1吨"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_3"
                    style="@style/ll_wrap_content_hor"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/px_5">

                    <TextView
                        style="@style/grayTextView_333333"
                        android:text="手续费:"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_num_lv_lv"
                        style="@style/grayTextView_333333"
                        android:text="6.00"
                        android:textSize="10sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View style="@style/line_1" />
</LinearLayout>