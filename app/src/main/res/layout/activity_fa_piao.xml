<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_eeeeee"
    android:layout_height="match_parent">

    <include layout="@layout/activity_base_title_bar" />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/textcolor_333333"
            android:background="@color/white"
            android:padding="@dimen/px_20"

            android:text="发票抬头" />

        <View style="@style/line_1" />

        <EditText
            android:id="@+id/et_taitou"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_60"
            android:textColor="@color/textcolor_333333"
            android:textSize="13sp"
            android:textColorHint="@color/textcolor_999999"
            android:background="@color/white"
            android:paddingLeft="@dimen/px_20"
            android:paddingRight="@dimen/px_20"
            android:gravity="center_vertical"
            android:hint="请输入发票抬头" />

        <View style="@style/line_1" />


        <View
            style="@style/line_1"
            android:layout_marginTop="@dimen/px_20" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/textcolor_333333"
            android:background="@color/white"
            android:padding="@dimen/px_20"

            android:text="发票内容" />

        <View style="@style/line_1" />

        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_200"
            android:textColor="@color/textcolor_333333"
            android:textSize="13sp"
            android:textColorHint="@color/textcolor_999999"
            android:background="@color/white"
            android:paddingLeft="@dimen/px_20"
            android:paddingRight="@dimen/px_20"
            android:gravity="left|top"
            android:paddingTop="@dimen/px_20"
            android:hint="请输入发票内容" />

        <Button
            android:id="@+id/btn_baocun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_50"
            android:layout_marginRight="@dimen/px_50"
            android:layout_marginTop="@dimen/px_40"
            android:background="@drawable/anjian"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="13sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
