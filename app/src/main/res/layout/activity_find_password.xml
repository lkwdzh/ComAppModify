<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ll_match_content_ver"
    android:background="@color/gray_eeeeee">

    <include layout="@layout/activity_base_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/gray_eeeeee"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/gray_eeeeee">

            <View style="@style/line_1" />

            <LinearLayout style="@style/ll_match_wrap_content_horWe3">

                <TextView
                    style="@style/save_TextView_333333_13"
                    android:text="用户名" />

                <EditText
                    android:id="@+id/et_username_findPwd"
                    style="@style/save_TextView_666666_13_center"
                    android:maxLength="15"
                    android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ_"
                    android:hint="请输入6-15位字符(数字/字母)" />
            </LinearLayout>


            <View style="@style/line_1" />
            <TextView
                style="@style/remind_TextView_666666_11_center"
                android:text="请输入6-15位字符(数字/英文大小写/下划线，例如：ttTT_123)" />

            <View style="@style/line_1" />
            <LinearLayout style="@style/ll_match_wrap_content_horWe3">

                <TextView
                    style="@style/save_TextView_333333_13"
                    android:text="手机号" />

                <EditText
                    android:id="@+id/et_phone__findPwd"
                    style="@style/save_TextView_666666_13_center"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:hint="请输入手机号" />
            </LinearLayout>

            <View style="@style/line_1" />
            <TextView
                style="@style/remind_TextView_666666_11_center"
                android:text="请填写您的常用手机，以方便与您联系，一个手机号可以注册多个用户" />

            <View style="@style/line_1" />
            <LinearLayout
                style="@style/ll_match_wrap_content_horWe3"
                android:gravity="center_vertical">

                <TextView
                    style="@style/save_TextView_333333_13"
                    android:text="验证码" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_code_findPwd"
                        style="@style/save_TextView_666666_13_center"
                        android:layout_marginRight="@dimen/px_20"
                        android:inputType="number"
                        android:hint="请输入验证码" />

                    <TextView
                        android:id="@+id/tv_code_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:textColor="@color/red_c91014"
                        android:background="@drawable/delete"
                        android:text="验证码" />
                </LinearLayout>

            </LinearLayout>

            <View style="@style/line_1" />

            <LinearLayout style="@style/ll_match_wrap_content_horWe3">

                <TextView
                    style="@style/save_TextView_333333_13"
                    android:text="新密码" />

                <EditText
                    android:id="@+id/et_password__findPwd"
                    style="@style/save_TextView_666666_13_center"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:hint="请输入6-20位字符(数字/字母)" />
            </LinearLayout>

            <View style="@style/line_1" />

            <LinearLayout style="@style/ll_match_wrap_content_horWe3">

                <TextView
                    style="@style/save_TextView_333333_13"
                    android:text="确认密码" />

                <EditText
                    android:id="@+id/et_confirm__findPwd"
                    style="@style/save_TextView_666666_13_center"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:hint="请输入6-20位字符(数字/字母)" />
            </LinearLayout>

            <View style="@style/line_1" />
            <TextView
                style="@style/remind_TextView_666666_11_center"
                android:text="请输入6-20位字符(数字/英文大小写，例如：ttTT123)" />

            <View style="@style/line_1" />
            <Button
                android:id="@+id/btn_findPwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_50"
                android:layout_marginRight="@dimen/px_50"
                android:layout_marginTop="@dimen/px_40"
                android:background="@drawable/anjian"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="15sp" />


        </LinearLayout>
    </ScrollView>


</LinearLayout>
