<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"

    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_cb_d_lv"
            style="@style/ll_match_content_hor"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"

            android:gravity="center_vertical">

            <CheckBox
                android:id="@+id/cb_driver_lv"
                android:button="@drawable/ischecked"
                android:padding="@dimen/px_15"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_20"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_driver_lv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/px_14"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/px_14"
                    android:paddingRight="@dimen/px_14"
                    android:paddingTop="@dimen/px_14"
                    android:textColor="@color/textcolor_333333"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_seat_lv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/px_14"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/px_14"
                    android:paddingRight="@dimen/px_14"
                    android:paddingTop="@dimen/px_14"
                    android:visibility="gone"
                    android:textColor="@color/textcolor_333333"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_phone_lv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/px_14"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/px_14"
                    android:layout_weight="2"
                    android:paddingRight="@dimen/px_14"
                    android:paddingTop="@dimen/px_14"
                    android:visibility="gone"
                    android:textColor="@color/textcolor_333333"
                    android:textSize="13sp" />
            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/next"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <View style="@style/line_1" />
</LinearLayout>