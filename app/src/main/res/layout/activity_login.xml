<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ll_match_content_ver"
    android:background="@color/gray_eeeeee">

    <include layout="@layout/activity_base_title_bar" />

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px_100"
            android:src="@drawable/denglu" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px_15"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_marginTop="@dimen/px_60"
            android:text="账号登录"
            android:textColor="@color/textcolor_999999"
            android:textSize="18sp" />
    </LinearLayout>

    <View style="@style/line_1" />

    <LinearLayout
        style="@style/ll_match_wrap_content_ver"
        android:background="@color/white">


        <LinearLayout
            style="@style/ll_match_wrap_content_hor"
            android:background="@color/white"
            android:padding="@dimen/px_15"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor_333333"
                    android:textSize="15sp"
                    android:drawablePadding="@dimen/px_3" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:src="@drawable/jiage_down" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_username_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_8"
                android:layout_weight="3"
                android:background="@null"
                android:hint="用户名/席位号"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIGKLMNOPQRSTUVWXYZ"
                android:textColorHint="@color/textcolor_999999"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            style="@style/line_1"
            android:layout_marginLeft="@dimen/px_14"
            android:layout_marginRight="@dimen/px_14" />

        <LinearLayout
            style="@style/ll_match_wrap_content_hor"
            android:background="@color/white"
            android:padding="@dimen/px_14"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_5"
                android:layout_weight="1"
                android:text="密   码："
                android:textColor="@color/textcolor_333333"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_password_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@null"
                android:hint="密码"
                android:layout_marginLeft="@dimen/px_10"
                android:inputType="textPassword"
                android:textColorHint="@color/textcolor_999999"
                android:textSize="15sp" />
        </LinearLayout>

        <View style="@style/line_1" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_50"
        android:layout_marginRight="@dimen/px_50"
        android:layout_marginTop="@dimen/px_20"
        android:background="@drawable/anjian"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="13sp" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_register"
        style="@style/redTextView_c91014"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginRight="@dimen/px_20"
        android:layout_marginTop="@dimen/px_20"
        android:text="点击注册" />
    </RelativeLayout>
</LinearLayout>
